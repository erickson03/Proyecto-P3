@model PSC06.Models.ViewModels.AddUserViewModels
@{
    ViewBag.Title = "Nuevo registro";
    Layout = "~/Views/Shared/LayoutApp.cshtml";
}

<h2>Nuevo</h2>

<div class="col-md-12">
    <br />
    <br />
    @using (Html.BeginForm("Add", "User", FormMethod.Post, new { role = "form", @class = "" }))
    {
        @Html.LabelFor(d => d._Correo)
        @Html.TextBoxFor(d => d._Correo, new { @class = "form-control" })
        @Html.ValidationMessage("Correo", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(d => d._Clave)
        @Html.TextBoxFor(d => d._Clave, new { @class = "form-control" })
        @Html.ValidationMessage("Password", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(d => d._ClaveConfirma)
        @Html.TextBoxFor(d => d._ClaveConfirma, new { @class = "form-control" })
        @Html.ValidationMessage("_ClaveConfirma", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(d => d._Edad)
        @Html.TextBoxFor(d => d._Edad, new { @class = "form-control" })
        @Html.ValidationMessage("_Edad", new { @class = "text-danger" })
        <br />

        <div style="text-align:left">
            <input type="button"
                   value="Guardar"
                   class="btn btn-success btn-lg" />

            <input type="button"
                   value="Volver Atras"
                   class="btn btn-info btn-lg"
                   onclick="document.location.href = '@Url.Content("~/User/Query")'" />
        </div>
    }
</div>