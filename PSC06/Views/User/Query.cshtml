@model List<PSC06.Models.ViewModels.QueryViewModels>
@{
    ViewBag.Title = "Consulta Usuario";
    Layout = "~/views/shared/_LayoutApp.cshtml";
}

<h2>Consulta</h2>

<div class="row">
    <br />  

    <div class="col-md-12">
        <input type="button"
               class="btn btn-primary btn-lg"
               onclick="document.location.href = '@Url.Content("~/User/Add")'"
               value="Nuevo" />

        <input type="button"
               class="btn btn-primary btn-lg"
               onclick="document.location.href = '@Url.Content("~")'"
               value="Volver Atras" />
    </div>

    <br />
    <br />

    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th style="background-color:#0094ff; color: white">ID</th>
                <th style="background-color:#0094ff; color: white">CORREO</th>
                <th style="background-color:#0094ff; color: white">EDAD</th>
                <th style="background-color:#0094ff; color: white">Accion a Tomar</th>
            </tr>
            @foreach(var objs in Model)
            {
                <tr>
                    <td>@objs._Id</td>
                    <td>@objs._Email</td>
                    <td>@objs._Edad</td>

                    <td>
                        <input type="button"
                               class="btn btn-danger btn-lg"
                               onclick="jsBorrarRegistro(@objs._Id)"
                               value="Borrar" />

                        <input type="button"
                               class="btn btn-danger btn-lg"
                               onclick="document.location.href = '@Url.Content("~/user/edit/" + @objs._Id)'"
                               value="Editar" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
function jsBorrarRegistro(_ID) {
    if (confirm("Seguro/a desea borrar el registro ?")) {
        url = "@Url.Content("~/User/BorrarRegistro")" + "/" + _ID

        $.post(url, function (data) {
            if (data == "1") {
                document.loca.href = "@Url.Content("~/User/Query")"
            } else {
                alert("Registro no fue borrado :)")
            }
        })
    }
}
</script>